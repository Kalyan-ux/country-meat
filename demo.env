// cart-view.component.scss

// Cart Content Layout
.cart-content {
  display: flex;
  gap: 2rem;
  align-items: flex-start;
}

// Cart Items Section
.cart-items-section {
  flex: 2; // <-- ADD THIS LINE

  // All your other existing styles for this section stay here
  background: white;
  border-radius: 16px;
  // ... etc.
}

// Cart Summary Section
.cart-summary {
  flex: 1; // <-- ADD THIS LINE

  // All your other existing styles for this section stay here
  background: white;
  border-radius: 16px;
  // ... etc.
}

// Don't forget to add this at the end for mobile devices
@media (max-width: 1024px) {
  .cart-content {
    flex-direction: column; // Stacks the items vertically
  }
}
